# ===========================================
# AdvanceEdu E-commerce API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# Local: postgresql://user:password@localhost:5432/dbname
# Cloud: Use connection string from Supabase, Neon, or AWS RDS
DATABASE_URL="postgresql://user:password@localhost:5432/advanceedu"

# -------------------------------------------
# JWT Configuration
# -------------------------------------------
# Generate secure secrets: openssl rand -hex 64
# MUST be at least 32 characters for security
JWT_ACCESS_SECRET="your-access-secret-min-32-characters-change-this"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-characters-change-this"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# -------------------------------------------
# Stripe Configuration
# -------------------------------------------
# Get from: https://dashboard.stripe.com/test/apikeys
# Test keys start with sk_test_, live keys with sk_live_
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=3000
NODE_ENV="development"
API_BASE_URL="http://localhost:3000"

# -------------------------------------------
# Frontend Integration (CORS)
# -------------------------------------------
FRONTEND_URL="http://localhost:4000"

LOG_LEVEL=info
